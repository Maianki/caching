<%- include('partials/header', {title: "Edit Blog"}) %>

    <h1 class="display-1">Edit <%= blog.title%></h1>
    <div class="container mt-5">
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" placeholder="blog title" value="<%= blog.title %>" class="form-control" id="title" >
              </div>
              
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" rows="3" name="description" placeholder="blog description"><%= blog.description %></textarea>
            </div>
            <input type="text" name="author" placeholder="author" value="<%= blog.author%>">
            <input type="date" name="createdAt" value="<%= blog.createdAt.toISOString().split('T')[0] %>">
            <button class="btn btn-secondary">Submit</button>
        </form>
    </div>

<%- include('partials/footer') %>