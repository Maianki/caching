<%- include('partials/header', {title: blog.title}) %>

    <h1 class="display-1 text-secondary"><%= blog.title%></h1>
    <span>by <%= blog.author %></span> <a href="/blogs/<%= blog._id %>/edit" class="text-secondary btn-link">Edit</a>
    <div class="container my-5">
        <p><%= blog.description %></p>
    </div>
    <form class="mb-2" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <button class="btn btn-danger">Delete</button>
    </form> 
    <a class="btn btn-link" href="/blogs">Home</a>

<%- include('partials/footer') %>
